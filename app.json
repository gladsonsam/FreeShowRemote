{
  "expo": {
    "name": "FreeShow Remote",
    "slug": "freeshow-remote",
    "version": "1.1.0",
    "orientation": "default",
    "icon": "./assets/icon-bg.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": false,
    "scheme": "FreeShowRemote",
    "platforms": ["ios", "android"],
    "splash": {
      "image": "./assets/app-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#191923"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "requireFullScreen": false,
      "splash": {
        "image": "./assets/app-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#191923"
      },
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        },
        "NSBonjourServices": ["_freeshow._udp"],
        "NSLocalNetworkUsageDescription": "Allow FreeShow Remote to discover devices on the local network.",
        "NSCameraUsageDescription": "Allow FreeShow Remote to access your camera for live streaming.",
        "NSMicrophoneUsageDescription": "Allow FreeShow Remote to access your microphone for live streaming audio.",
        "CFBundleDisplayName": "FreeShow Remote",
        "CFBundleShortVersionString": "1.1.0",
        "CFBundleVersion": "2",
        "UIStatusBarHidden": false,
        "UIViewControllerBasedStatusBarAppearance": true,
        "UISupportedInterfaceOrientations": [
          "UIInterfaceOrientationPortrait",
          "UIInterfaceOrientationPortraitUpsideDown",
          "UIInterfaceOrientationLandscapeLeft",
          "UIInterfaceOrientationLandscapeRight"
        ],
        "UISupportedInterfaceOrientations~ipad": [
          "UIInterfaceOrientationPortrait",
          "UIInterfaceOrientationPortraitUpsideDown",
          "UIInterfaceOrientationLandscapeLeft",
          "UIInterfaceOrientationLandscapeRight"
        ],
        "UIApplicationShortcutItems": []
      },
      "entitlements": {
        "com.apple.developer.networking.multicast": true
      },
      "bundleIdentifier": "app.freeshow.remote",
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "icon": "./assets/icon-bg.png",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": true,
      "splash": {
        "image": "./assets/app-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#191923"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.ACCESS_WIFI_STATE",
        "android.permission.WAKE_LOCK",
        "android.permission.RECORD_AUDIO",
        "com.google.android.gms.permission.AD_ID"
      ],
      "package": "app.freeshow.remote",
      "allowBackup": false,
      "softwareKeyboardLayoutMode": "pan",
      "adaptiveIcon": {
        "foregroundImage": "./assets/app-icon.png",
        "backgroundColor": "#191923"
      }
    },
    "plugins": [
      "expo-system-ui",
      "./plugins/withTVLauncher.js",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera for scanning QR codes."
        }
      ],
      [
        "@react-native-tvos/config-tv",
        {
          "androidTVBanner": "./assets/app-icon.png",
          "removeFlipperOnAndroid": true,
          "androidTVIcon": "./assets/app-icon.png"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 24,
            "usesCleartextTraffic": true,
            "networkSecurityConfig": "./android/network_security_config.xml",
            "manifestQueries": {
              "intent": [
                {
                  "action": "android.intent.action.VIEW",
                  "data": {
                    "scheme": "http"
                  }
                },
                {
                  "action": "android.intent.action.VIEW",
                  "data": {
                    "scheme": "https"
                  }
                }
              ]
            },
            "usesFeatures": [
              {
                "name": "android.hardware.touchscreen",
                "required": false
              },
              {
                "name": "android.software.leanback",
                "required": false
              },
              {
                "name": "android.hardware.camera",
                "required": false
              },
              {
                "name": "android.hardware.camera.autofocus",
                "required": false
              },
              {
                "name": "android.hardware.microphone",
                "required": false
              }
            ]
          },
          "ios": {
            "infoPlist": {
              "NSAppTransportSecurity": {
                "NSAllowsLocalNetworking": true
              }
            }
          }
        }
      ],
      "expo-font",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#191923",
          "image": "./assets/app-icon.png",
          "imageWidth": 250,
          "resizeMode": "contain"
        }
      ],
      [
        "expo-quick-actions",
        {
          "androidIcons": {
            "wifi_shortcut": {
              "foregroundImage": "./assets/icon-bg.png",
              "backgroundColor": "#191923"
            }
          }
        }
      ],
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "freeshow-remote",
          "organization": "churchapps"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "ea07578b-f68b-4961-b7d8-45f37a64f97b"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/ea07578b-f68b-4961-b7d8-45f37a64f97b"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "owner": "churchapps"
  }
}
